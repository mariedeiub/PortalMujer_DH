<!DOCTYPE html>
<html lang="en">
<!--HEAD-->
<%- include('./partials/head.ejs')  %> 
    <title>Registro</title>
    <!--HOJA DE ESTILO-->
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/form.css" rel="stylesheet">
</head>
<body>
    <!--HEADER-->
    <%- include('./partials/header.ejs')  %>  
    <!--MAIN -->
    <main class="register">
        <!--MENSAJE DE ERROR EN CASO QUE FALTE COMPLETAR UN CAMPO O HAYA UN ERROR EN LOS CAMPOS INGRESADOS-->
        <section class="errores">
            <% if (locals.errors) { %>
                <% errors.forEach(error => { %>
                    <p><%= error.msg %> </p> 
                <% }) %>
            <% } %>
        </section>       
        <!--FORMULARIO DE EDICION DE USUARIO-->
        <form action="/user/editar/?_method=PUT" method="POST" class="form-register" id="form-register" enctype="multipart/form-data">
            <h1 class="login">EDICION DE USUARIO: <%= usuario.nombre_usuario %></h1>
            <div class="div-form-register">
                <!-- NOMBRE -->
                <div class="group-register" id="1">
                    <input required type="text" class="input-text" id="nombre" name="nombre" value="<%= usuario.nombre %>"><span class="barra"></span>
                    <label for="nombre" class="lbl-text">Nombre</label>
                </div>

                <!-- APELLIDO -->
                <div class="group-register" id="2">
                    <input required type="text" class="input-text" id="apellido" name="apellido" value="<%= usuario.apellido %>"><span class="barra"></span>
                    <label for="apellido" class="lbl-text">Apellido</label>
                </div>

                <!-- DIRECCION -->
                <div class="group-register" id="3">
                    <input required type="text" class="input-text" id="direccion" name="direccion" value="<%= usuario.direccion %>"><span class="barra"></span>
                    <label for="direccion" class="lbl-text">Direccion</label>
                </div>
                <div class="group-register" id="4">
                    <input required type="text" class="input-text" id="localidad" name="localidad" value="<%= usuario.localidad %>"><span class="barra"></span>
                    <label for="localidad" class="lbl-text">Localidad</label>
                </div>
                <div class="group-register" id="5">
                    <input required type="text" class="input-text" id="pais" name="pais"  value="<%= usuario.pais %>"><span class="barra"></span>
                    <label for="pais" class="lbl-text">Pais</label>
                </div>

                <!-- EDAD -->
                <div class="group-register" id="6">
                    <input required type="number" class="input-text" id="edad" name="edad" value="<%= usuario.edad %>"><span class="barra"></span>
                    <label for="edad" class="lbl-text">Edad</label>
                </div>

                <!-- CORREO ELECTRONICO -->
                <div class="group-register" id="7">
                    <input required type="email" class="input-text" id="mail" name="email" value="<%= usuario.email %>"><span class="barra"></span>
                    <label for="mail" class="lbl-text">Correo Electronico</label>
                </div>

                <!-- USUARIO -->
                <div class="group-register" id="8">
                    <input required type="text" class="input-text" id="usuario" name="nombreUsuario" value="<%= usuario.nombre_usuario %>"><span class="barra"></span>
                    <label for="usuario" class="lbl-text">Nombre de Usuario</label>
                </div>

                <!-- CONTRASENA -->
                <div class="group-register" id="9">
                    <input required type="password" class="input-text" id="contraseña" name="contrasenia"  value="<%= usuario.contraseña %>"><span class="barra"></span>
                    <label for="contraseña" class="lbl-text">Contraseña</label>
                </div>

                <!-- CONFIRMAR CONTRASENA -->
                <div class="group-register" id="10">
                    <input required type="password" class="input-text" id="repetirContraseña" name="repetirContrasenia" value="<%= usuario.contraseña %>"><span class="barra"></span>
                    <label for="repetirContraseña" class="lbl-text">Repetir Contraseña</label>
                </div>
                <!-- FOTO USUARIO -->
                <div class="group-register" id="cargar-imagen">
                    <input type="file" accept="image/png,image/jpeg" class="input-img" id="foto" name="img">
                </div>
            </div>
                <button type="submit">Editar</button>
        </form>
    </main>
<!-- SUSCRIPCION + FOOTER + COPIRIGHT-->
<%- include('./partials/footer.ejs')  %>